{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appName" : { "type" : "string"},
        "envName" : { "type" : "string"},
        "color" : { "type" : "string"},
        "secret" : { "type" : "securestring"}
    },
    "functions": [],
    "variables": {
        "prefix": "[concat(parameters('envName'),'-',parameters('appName'))]",
        "siteName": "[concat(variables('prefix'),'-site')]",
        "hostName": "[concat(variables('prefix'),'-host')]"
    },
    "resources": [
        {
            "name": "[variables('hostName')]",
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2020-12-01",
            "location": "[resourceGroup().location]",
            "kind":"app,linux",
            "sku": {
                "name": "S1",
                "capacity": 1
            },
            "properties": {
                "reserved": true
            }
        },
        {
            "name": "[variables('siteName')]",
            "type": "Microsoft.Web/sites",
            "apiVersion": "2020-12-01",
            "location": "[resourceGroup().location]",
            "kind":"linux,app",
            "tags": {
                "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', variables('hostName'))]": "Resource",
                "displayName": "[variables('siteName')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('hostName'))]"
            ],
            "properties": {
                "name": "[variables('siteName')]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostName'))]"
            },
            "resources": [
                {
                    "name": "appsettings",
                    "type": "config",
                    "location": "resourceGroup().location",
                    "apiVersion": "2015-08-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', variables('siteName'))]"
                    ],
                    "tags": {
                        "displayName": "config"
                    },
                    "properties": {
                        "EnvName": "[parameters('envName')]",
                        "FavoriteColor": "[parameters('color')]",
                        "Secret": "[parameters('secret')]"
                    }
                }
            ]
        }
    ],
    "outputs": {}
}